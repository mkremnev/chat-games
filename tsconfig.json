{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"sourceMap": true,
		"jsx": "react",
		"allowJs": true,
		"noImplicitAny": true,
		"baseUrl": "./",
		"paths": {
			"@/types/*": ["types/*"],
			"@/api/*": ["src/api/*"],
			"@/components/*": ["src/components/*"],
			"@/modules/*": ["src/modules/*"],
			"@/*": ["src/*"]
		},
		"outDir": "/dist",
		"esModuleInterop": true,
		"strict": true
	},
	"exclude": ["node_modules"],
	"include": [
		"types/svg.d.ts",
		"types/img.d.ts",
		"types/woff.d.ts",
		"src/**/*"
	]
}
